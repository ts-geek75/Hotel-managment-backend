{
  "compilerOptions": {
    "target": "ES2022",            // Modern JS
    "module": "ESNext",            // Emit ES Modules
    "moduleResolution": "NodeNext", // Resolve ES modules like Node does
    "esModuleInterop": true,       // For default imports from CommonJS
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist"
  },
  "include": ["src"]
}
